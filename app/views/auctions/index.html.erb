<div id="tabs">
    <ul>
      <li><a href="#tabs-1">Open Auctions</a></li>
      <li><a href="#tabs-2">Paused Auctions</a></li>
    </ul>
    <div id="#tabs-1">Open auctions tabs content</div>
    <div id="#tabs-2">Closed auctions tabs content</div>
</div>

<table id="all_auctions">
  <tr>
    <td class="main">
      <span><%=t(:my_auctions)%></span>
    </td>
  </tr>
  <% @auctions.each do |auction| %>
      <tr>
        <td><%= link_to t(:details), "/auctions/" + auction.id.to_s %></td>
        <td><%= t(:current_price, :price=>auction.current_price) %></td>
        <td><%= Product.find(auction.product_id).name %></td>
      </tr>
  <% end %>
</table>