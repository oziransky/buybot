<div id="all_categories">


<% form_tag "customer_products/search", :method => 'get' do %>
  <p>
    <%= submit_tag "חפש", :name => nil%>
    <!--%= text_field_tag :search, params[:search] %-->
    <%= text_field_tag "search_input",params[:search], :placeholder=>"אני רוצה לקנות",:class=>"bold_input" %>
  </p>
<% end %>

<div>&nbsp;</div>


<div>
<table id="categories">
	<tr><th colspan="4">קטגוריות</th></tr>
	<%@root_categories.each do |root|%>
	<tr>
		<td colspan="4"><span class="root_category"><%= root.name%></span></td>
	</tr>
	<tr>
		<%root.children.each do |sub|%> <td><!--div class = "sub_category"-->
		<ul >
			<li class = "sub_category">
				<%= sub.name%>
			</li>
			<%sub.children.each do |sub_sub|%>
			<div class = "sub_sub_category">
				<li>
					<%= link_to sub_sub.name, sub_sub %>
				</li>
			</div>
			<%end%>
		</ul>  </td>
		<%end%> <!--/div-->
	</tr>
	<%end%>
	
</table>

</div>
</div>

