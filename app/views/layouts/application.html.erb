<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'jquery', 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="container">
  <%= render 'layouts/header' %>
  <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
  <% end %>
  <div id="content">
    <%= yield %>
  </div>
  <%= render 'layouts/footer' %>

  <%= debug(params) if Rails.env.development? %>
</div>

</body>
</html>
