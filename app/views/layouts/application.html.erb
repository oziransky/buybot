<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'jquery', 'jquery-ui.min', 'application',
                             'jquery.ui.potato.menu', 'jquery.equal-heights', 'jquery.ui.popup' %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="container">
  <%= render :partial=>'layouts/header'%>

  <% if flash[:notice] %>
      <div class="flash" id="flash_notice"><%= flash[:notice] %></div>
  <% end %>
  <% if flash[:success] %>
      <div class="flash" id="flash_success"><%= flash[:success] %></div>
  <% end %>
  <% if flash[:error] %>
      <div class="flash" id="flash_error"><%= flash[:error] %></div>
  <% end %>

  <div id="content">
    <%= yield %>
  </div>

  <%= render 'layouts/footer' %>

  <%= debug(params) if Rails.env.development? %>
</div>

</body>
</html>
