<div class="simple_form">
  <%= form_for @store do |f| %>
      <%= f.label :name %>:<br />
      <%= f.text_field :name %><br />

      <%= f.label :address %>:<br />
      <%= f.text_field :address %><br />

      <%= f.label :url %>:<br />
      <%= f.url_field :url %><br />

      <%= f.label :description %>:<br />
      <%= f.text_area :description, :rows => 3 %><br />

      <%= f.submit "Update Store" %>
  <% end %>
</div>
