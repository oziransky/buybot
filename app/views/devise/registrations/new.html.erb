<div class="simple_form">

  <%= t(:sign_up_with) %>
  <%= link_to image_tag('facebook_32.png'), connect_to_fb_users_path %>
  <p>Or</p>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div>
        <%= f.label t(:email_s) %><br />
        <%= f.email_field :email %>
      </div>

      <div>
        <%= f.label t(:password_s) %><br />
        <%= f.password_field :password %>
      </div>

      <div>
        <%= f.label t(:confirm_password) %><br />
        <%= f.password_field :password_confirmation %>
      </div>

      <div>
        <%= f.submit t(:sign_up) %>
      </div>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>
